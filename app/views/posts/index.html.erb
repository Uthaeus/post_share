<div class="container">
  <div class="row">
    <div class="col-md-10">
      <h1>Posts</h1>
      <hr />
      <% @posts.each do |post| %>
        <div class="card" style="margin: 25px; padding: 10px;">
          <%= image_tag post.thumb_image, style: "width: auto;" %>
          <h3><%= link_to post.title, post_path(post) %></h3>
        </div>
      <% end %>
    </div>

    <div class="col-md-2">
      <div>
        <h2>Options</h2>
      </div>
    </div>
  </div>
</div>

<%= link_to 'New Post', new_post_path %>
